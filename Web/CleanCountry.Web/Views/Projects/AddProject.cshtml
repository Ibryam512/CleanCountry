@model AddProjectsInputViewModel
@{
    ViewData["Title"] = "AddProject";
}

<h1 class="text-center">Добави Проект</h1>

<form method="post" class="mt-4" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="ml-3"></label>
        <input asp-for="Title" class="form-control" id="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="ml-3"></label>
        <textarea class="form-control" asp-for="Description" rows="3" id="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group text-center">
        <div class="row">
            <div class="col">
                <span asp-validation-for="Date" class="text-danger"></span>
                <label>Дата:</label>
                <input type="date" id="Date" name="Date">
            </div>
            <div class="col">
                <span asp-validation-for="Image" class="text-danger"></span>
                <div class="custom-file">
                    <input asp-for="Image" onchange="loadFile(event)" type="file" class="custom-file-input" id="Image">
                    <label asp-for="Image" class="custom-file-label" id="Image"></label>
                </div>
                <img class="mt-3 img-fluid img-thumbnail w-50" id="output" />
            </div>
        </div>
    </div>
    <div class="form-group text-center">
        <button class="btn btn-primary btn-lg mt-4">Регистрирай проект</button>
    </div>

</form>
<script>
    var image = document.getElementById('output').style.display = "none";
    var loadFile = function (event) {
        document.getElementById('output').style.display = "initial"
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
