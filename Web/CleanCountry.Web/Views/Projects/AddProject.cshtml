@model AddProjectsInputViewModel
@{
    ViewData["Title"] = "AddProject";
}

<h1 class="text-center" >Добави Проект</h1>

<form method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="Title" class="ml-3"></label>
        <input asp-for="Title" class="form-control" id="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="ml-3"></label>
        <textarea class="form-control" asp-for="Description" rows="3" id="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <div class="custom-file">
            <input asp-for="Image" name="WearImage" onchange="loadFile(event)" class="custom-file-input">
            <label asp-for="Image" class="custom-file-label" for="WearImage"></label>
        </div>
        <img class="mt-3 img-fluid img-thumbnail w-50" id="output" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <button class="btn btn-primary btn-lg mt-4">Sign in</button>
    </div>
</form>