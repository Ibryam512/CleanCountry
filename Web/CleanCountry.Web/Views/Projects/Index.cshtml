@model List<Project>
@{
    ViewData["Title"] = "Projects";
}
<a class="btn btn-info float-right" asp-controller="Projects" asp-action="AddProject">Добави проект</a>
<h2>Проекти</h2>
<hr/>
<div class="card-columns">
    @foreach (var project in Model)
    {
        <div class="card projectAnimated" href="">
            <img class="card-img-top" src="@project.Images" alt="Card image cap">
            <div class="card-body text-center">
                <h5 class="card-title">@project.Title</h5>
                <p class="card-text">@project.Description</p>
                <a href="/Projects/Project/@project.Id" class="btn btn-primary w-100">Повече информация</a>
            </div>
        </div>
    }
</div>
<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>